<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>

    <package name="tarefasDefault" extends="struts-default">      
        <action name="login" class="com.jadson.dev.tarefas.LoginAction">
            <result>/WEB-INF/jsp/login.jsp</result>
        </action>
     </package>
     
     <package name="model" extends="struts-default" namespace="/model">
     	<action name="resource!*" method="{1}" class="resource">
     		<result name="input">/jsp/login.jsp</result>
     		<result name="loged">/jsp/home.jsp</result>
     	</action>     
     </package>

</struts>
